# virtual environment settings
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/revup/work
export PIP_RESPECT_VIRTUALENV=true
source /usr/local/bin/virtualenvwrapper.sh
export PIP_VIRTUALENV_BASE=$WORKON_HOME

# misc environment variables
export desktop=~/Desktop
export docs=~/Documents
export PATH+=:~/scripts

# set prompt (\$ changes on root)
export PS1='\$ '

# show slash after directories
set mark-directories on

# press ^[ on command line for vi-mode
set -o vi

# for cd, only complete directories
complete -d cd

# recursive globbing with **
shopt -s globstar

# share command history
__on_debug() {
    history -a ; history -n
}
trap __on_debug DEBUG

# start tmux and attach to session if running
export TERM=screen-256color
tmux attach &> /dev/null
if [[ ! $TERM =~ screen ]]; then
    exec tmux
fi
