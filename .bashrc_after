# misc environment variables
export desktop=~/Desktop
export docs=~/Documents
export PATH+=:~/scripts

# set prompt (\$ changes on root)
export PS1='\$ '

# show slash after directories
set mark-directories on

# press ^[ on command line for vi-mode
set -o vi

# for cd, only complete directories
complete -d cd

# recursive globbing with **
shopt -s globstar

# start tmux, attach to session if running
if [[ -z "$TMUX" ]]; then
    export TERM=screen-256color
    tmux attach &> /dev/null || exec tmux
fi
